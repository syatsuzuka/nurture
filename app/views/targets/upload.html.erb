<nav aria-label="breadcrumb">
  <ol class="breadcrumb d-flex align-items-center">
    <li class="breadcrumb-item"><%= link_to t('resources.home'), dashboard_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item" aria-current="page"><%= link_to t('resources.course'), courses_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= t('resources.course') %><%= t('suffix.detail') %></li>
  </ol>
</nav>

<h1 class="mb-5"><i class="fas fa-bullseye me-3"></i><%= t('.text_title') %></h1>

<%= form_tag import_course_targets_path(@course), multipart: true do %>
  <div class="mt-5 mb-5">
    <div>
      <%= t('.text_file_select') %>
    </div>
    <%= file_field_tag :file %>

    <%= link_to "/sample/nurture_target_sample.csv", class: "btn btn-success text-light" do %>
      <i class="fas fa-download"></i>
      <%= t('.btn_sample_csv') %>
    <% end %>
  </div>

  <div>
    <%= submit_tag t('actions.upload'), class: "btn btn-success text-light" %>
    <%= link_to t('actions.cancel'), course_assignments_path(@course), class: "btn btn-secondary text-light" %>
  </div>
<% end %>
