<div class="container m-5  col-6">
  <h1 class="h3 mb-3 fw-normal">User Setting</h1>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">

      e-mail
      <div class="border p-2">
        <%= @user.email%>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <%= f.input :password,
                  hint: "leave it blank if you don't want to change it",
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :password_confirmation,
                  required: false,
                  input_html: { autocomplete: "new-password" } %>
      <%= f.input :current_password,
                  hint: "we need your current password to confirm your changes",
                  required: true,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :first_name, required: true %>
      <%= f.input :last_name, required: true %>
      <%= f.input :nickname, required: true %>

      <%
        manager_options = User.where(role: "tutor").where.not(id: @user.id).order(:first_name, :last_name)

        @manager_options = manager_options.select do |user|
          result = true
          until user.manager.nil?
            result = false if user.manager == @user
            user = user.manager
          end
          result
        end
      %>

      <%= f.association :manager,
        collection: @manager_options,
        label: "Manager",
        label_method: :select_label_fullname
      %>
      <%= f.input :message %>
      <% if @user.role == "tutor" %>
        <%= f.input :specialty %>
      <% else %>
        <%= f.input :interest %>
      <% end %>

      <%= f.input :visible, label: 'Make your user info visible to other tutors/students' %>
      <%= f.input :photo, as: :file %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Save", class: "btn btn-success text-light" %>
      <%= link_to "Cancel", :back, class: "btn btn-danger text-light" %>
    </div>
  <% end %>
</div>
