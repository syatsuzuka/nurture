<%= simple_form_for [@course, @target, @progress] do |f| %>

  <div>
    <span><%= t('resource.course') %></span>
    <div class="border mt-2 mb-3 p-2">
      <%= @course.name %>
    </div>
  </div>

  <div>
    <span><%= t('resource.target') %></span>
    <div class="border mt-2 mb-3 p-2">
      <%= @target.name %>
    </div>
  </div>

  <%= f.input :date, required: true, html5: true, label: t('label.progress.date') %>

  <% if @target.score_type == "boolean" %>
    <%= f.input :score,
                required: true,
                as: :boolean,
                label: "#{t('label.progress.score')} (#{t('label.form.score_boolean')})",
                placeholder: t('label.progress.score_placeholder')
    %>
  <% elsif @target.score_type == "integer" %>
    <%= f.input :score,
                required: true,
                as: :integer,
                label: "#{t('label.progress.score')} (#{t('label.form.score_integer')})",
                placeholder: t('label.progress.score_placeholder')
    %>
  <% else %>
    <%= f.input :score,
                required: true,
                as: :float,
                label: "#{t('label.progress.score')} (#{t('label.form.score_float')})",
                placeholder: t('label.progress.score_placeholder')
    %>
  <% end %>
  <%= f.input :comment,
              label: t('label.progress.comment'),
              placeholder: t('label.progress.comment_placeholder')
  %>

  <div class="mt-4">
    <%= f.submit t('label.form.save'), class: "btn btn-success text-light" %>
    <%= link_to t('label.form.cancel'), :back, class: 'btn btn-secondary text-light'%>
  </div>
<% end %>
