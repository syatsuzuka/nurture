<h1 class="mb-5">Upload Progress data (CSV)</h1>

<%= form_tag import_progresses_path(@target.course, @target), multipart: true do %>
  <div class="mt-5 mb-5">
    <div>
      Choose CSV file:
    </div>
    <%= file_field_tag :file %>

    <%= link_to "/sample/nurture_progress_sample.csv", class: "btn btn-success text-light" do %>
      <i class="fas fa-download"></i>
      Sample CSV
    <% end %>
  </div>

  <div>
    <%= submit_tag 'Import', class: "btn btn-success text-light" %>
    <%= link_to 'Cancel', course_target_progresses_path(@target.course, @target), class: "btn btn-secondary text-light" %>
  </div>
<% end %>
