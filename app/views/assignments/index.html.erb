<nav aria-label="breadcrumb">
  <ol class="breadcrumb d-flex align-items-center">
    <li class="breadcrumb-item"><%= link_to t('resources.home'), dashboard_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item" aria-current="page"><%= link_to t('resources.course'), courses_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= t('resources.course') %><%= t('suffix.detail') %></li>
  </ol>
</nav>

<h1><i class="fas fa-university me-3"></i><%= @course.name %></h1>

<!-- ======= Graph ======= -->
<div class="card flex-md-row shadow mt-5 p-4 rounded mb-4">
  <%= line_chart  @data_hash,
    title: "#{@course.name} - Progress",
    xtitle: "Time",
    ytitle: "Score",
    download: {background: "#ffffff"}
  %>
</div>

<% unless @open_assignments.count == 0 %>
  <div id="gannt-chart" class="card flex-md-row shadow mb-5 p-4 rounded"></div>
<% else %>
  <div class="card flex-md-row shadow mb-5 p-4 rounded">
    (No Homework remained
      <span class="ms-2">
        <% if current_user.role == "tutor" %>
          <%= emojify(":thinking:") %>
        <% else %>
          <%= emojify(":tada::tada::tada:") %>
        <% end %>
      </span>
    )
  </div>
<% end %>

<!-- ======= Target ======= -->
<h3 class="my-3"><i class="fas fa-bullseye me-3"></i>Target Settings

  <% if current_user.role == "tutor" %>
    <%= link_to new_course_target_path(@course), id: "add-target", class: "btn btn-success text-light ms-3" do %>
      <i class="fas fa-plus"></i>
      Add
    <% end %>

    <%= link_to upload_course_targets_path(@course), id: "upload-target", class: "btn btn-success text-light" do %>
      <i class="fas fa-upload"></i>
      Import
    <% end %>
  <% end %>

  <% if current_user.role.in?(["tutor", "student"]) %>
    <%= link_to export_course_targets_path(@course, format: :csv), id: "download-target", class: "btn btn-success text-light" do %>
      <i class="fas fa-download"></i>
      Export
    <% end %>
  <% end %>

  <span  class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#targets" aria-controls="targets" aria-expanded="false" aria-label="Toggle Target">
    <i class="fas fa-bars border p-2 rounded"></i>
  </span>
</h3>

<div class="collapse show" id="targets">

  <% unless @targets.count == 0 %>
    <table class="table table-responsive table-hover align-middle">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Edit</th>
          <th scope="col">Name (Fullpath)</th>
          <th scope="col">Description</th>
          <th scope="col">Target Score</th>
          <th scope="col">Display</th>
          <th scope="col">The Latest Score</th>
          <th scope="col">The Best Score</th>
          <% if current_user.role == "tutor" %>
            <th scope="col">Delete</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @targets.each_with_index do |target, index| %>
          <tr>
            <td scope="row"><%= index + 1 %></td>
            <td>
              <%= link_to edit_course_target_path(target.course, target), class: "edit-target btn btn-outline-success" do %>
                <i class="fas fa-edit"></i>
              <% end %>
            </td>
            <td>
              <% element = target %>
              <% parentpath = "" %>
              <% until element.parent.nil? %>
                <% element = element.parent %>
                <% if element.parent.nil? %>
                  <% parentpath = "#{element.name} #{parentpath}" %>
                <% else %>
                  <% parentpath = "> #{element.name} #{parentpath}" %>
                <% end %>
              <% end %>
              <span class="text-secondary">
                <%= parentpath %>
                <% unless parentpath.blank? %>
                  >
                <% end %>
              </span>
              <%= link_to course_target_progresses_path(@course, target), class: "text-dark" do %>
                <strong><%= target.name %></strong>
              <% end %>
            </td>
            <td><%= target.description %></td>
            <td><%= target.score %></td>
            <td>
              <% if target.display == true %>
                <i class="fas fa-check-circle"></i>
              <% else %>
                -
              <% end %>
            </td>
            <td>
              <% unless target.progresses.blank? %>
                <%= target.progresses.order(date: :desc).first.score %> (<%= target.progresses.order(date: :desc).first.date %>)
              <% else %>
                -
              <% end %>
            </td>
            <td>
              <% unless target.progresses.blank? %>
                <%= target.progresses.order(score: :desc).first.score %> (<%= target.progresses.order(score: :desc).first.date %>)
              <% else %>
                -
              <% end %>
            </td>
            <% if current_user.role == "tutor" %>
              <td>
              <%= link_to course_target_path(target.course, target), method: :delete, class: "delete-target btn btn-outline-secondary ms-1", data: { confirm: 'Do you really want to delete the target?' } do %>
                <i class="fas fa-trash-alt"></i>
              <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <span class="ms-5 text-secondary">No data</span>
  <% end %>
</div>

<!-- ======= Homework ======= -->

<h3 class="mt-5"><i class="fas fa-tasks me-3"></i>Homework
  <% if current_user.role == "tutor" %>
    <%= link_to new_course_assignment_path(@course), id: "add-assignment", class: "btn btn-success text-light ms-3" do %>
      <i class="fas fa-plus"></i>
      Add
    <% end %>

    <%= link_to upload_course_assignments_path(@course), id: "upload-assignment", class: "btn btn-success text-light" do %>
      <i class="fas fa-upload"></i>
      Import
    <% end %>
  <% end %>

  <% if current_user.role.in?(["tutor", "student"]) %>
    <%= link_to export_course_assignments_path(@course, format: :csv), id: "download-assignment", class: "btn btn-success text-light" do %>
      <i class="fas fa-download"></i>
      Export
    <% end %>
  <% end %>

  <span  class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#assignments" aria-controls="assignments" aria-expanded="false" aria-label="Toggle Homework">
    <i class="fas fa-bars border p-2 rounded"></i>
  </span>
</h3>

<div class="collapse show" id="assignments">
  <% unless @assignments.count == 0 %>
    <table class="table table-responsive table-hover align-middle">
      <thead class="thead-dark">
        <tr>
          <th scope="col">#</th>
          <th scope="col">Edit</th>
          <th scope="col">Title</th>
          <th scope="col">Instruction</th>
          <th scope="col">Checkpoints</th>
          <th scope="col">Status</th>
          <th scope="col">Comment</th>
          <th scope="col">Period</th>
          <% if current_user.role == "tutor" %>
            <th scope="col">Delete</th>
          <% end %>
        </tr>
      </thead>

      <tbody>
        <% @assignments.each_with_index do |assignment, index| %>
          <tr>
            <td scope="row"><%= index + 1 %></td>
              <td>
                <%= link_to edit_course_assignment_path(assignment.course, assignment), class: "edit-assignment btn btn-outline-success" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
              </td>
            <td>
              <%= link_to course_assignment_path(@course, assignment), class: "text-dark" do %>
                <%= assignment.title %>
              <% end %>
            </td>
            <td><%= assignment.instruction %></td>
            <td><%= assignment.checkpoint %></td>
            <td>
              <% if assignment.status == 0 %>
                Work In Process
              <% elsif assignment.status == 1 %>
                Done
                <% if current_user.role == "tutor" %>
                  <%= link_to "Close", close_course_assignment_path(@course, assignment, anchor: 'assignments'), method: :put, class: "btn btn-success", data: { confirm: 'Do you really want to close this?' } %>
                <% end %>
              <% else %>
                Closed
              <% end %>
            </td>
            <td><%= assignment.comment %></td>
            <td>
              <div>
                from:
                <% unless assignment.start_date.nil? %>
                  <%= assignment.start_date %>
                <% else %>
                  (Not determined)
                <% end %>
              </div>
              <div>
                to:
                <% unless assignment.end_date.nil? %>
                  <%= assignment.end_date %>
                <% else %>
                  (Not determined)
                <% end %>
              </div>
            </td>
            <% if current_user.role == "tutor" %>
              <td>
                <%= link_to course_assignment_path(assignment.course, assignment), method: :delete, class: "delete-assignment btn btn-outline-secondary", data: { confirm: 'Do you really want to delete the homework?' } do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <span class="text-secondary ms-5">No data</span>
  <% end %>
</div>

<div class="mt-5">
  <%= render 'chat' %>
</div>


