<nav aria-label="breadcrumb">
  <ol class="breadcrumb d-flex align-items-center">
    <li class="breadcrumb-item"><%= link_to t('resources.home'), dashboard_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item" aria-current="page"><%= link_to t('resources.course'), courses_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= t('resources.course') %><%= t('suffix.detail') %></li>
  </ol>
</nav>

<h2><i class="fas fa-tasks me-3 mb-4"></i><%= t('.text_title') %></h2>

<%= form_tag import_course_assignments_path(@course), multipart: true do %>
  <div>
    <div>
      <%= t('label.form.csv_file_select') %>
    </div>
    <%= file_field_tag :file %>

    <%= link_to "/sample/nurture_homework_sample.csv", class: "btn btn-success text-light" do %>
      <i class="fas fa-download"></i>
      <%= t('label.form.download_sample_csv') %>
    <% end %>
  </div>

  <div class="mt-4">
    <%= submit_tag t('label.form.upload'), class: "btn btn-success text-light" %>
    <%= link_to t('label.form.cancel'), course_assignments_path(@course), class: "btn btn-secondary text-light" %>
  </div>
<% end %>
