<%= simple_form_for [@assignment_templates_set, @assignment_template] do |f| %>
  <%= f.input :title, required: true, label: t('label.assignment_template.title') %>
  <%= f.input :instruction, required: true, label: t('label.assignment_template.instruction') %>
  <%= f.input :instruction_url, label: t('label.assignment_template.instruction_url') %>
  <%= f.input :checkpoint, required: true, label: t('label.assignment_template.checkpoint') %>

  <div class="mt-4">
    <%= f.submit t('label.form.save'), class: "btn btn-success text-light" %>
    <%= link_to t('label.form.cancel'), assignment_templates_set_assignment_templates_path(@assignment_templates_set), class: 'btn btn-secondary text-light'%>
  </div>
<% end %>
