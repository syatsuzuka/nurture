<nav aria-label="breadcrumb">
  <ol class="breadcrumb d-flex align-items-center">
    <li class="breadcrumb-item"><%= link_to "Home", dashboard_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item" aria-current="page"><%= link_to "Template", template_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item active" aria-current="page">Homework Template</li>
  </ol>
</nav>

<h1 class="mb-3">
  <i class="fas fa-bullseye me-2"></i>
  Homework Template - <%= @assignment_templates_set.name %>
</h1>

<% if @assignment_templates_set.user == current_user %>
  <%= link_to new_assignment_templates_set_assignment_template_path(@assignment_templates_set), id: "add-assignment-template", class: "btn btn-success text-light ms-3" do %>
    <i class="fas fa-plus"></i>
    Add
  <% end %>

  <%= link_to upload_assignment_templates_path(@assignment_templates_set), id: "upload-assignment-template", class: "btn btn-success text-light" do %>
    <i class="fas fa-upload"></i>
    Import
  <% end %>
<% end %>

<%= link_to export_assignment_templates_path(@assignment_templates_set, format: :csv), id: "download-assignment-template", class: "btn btn-success text-light" do %>
  <i class="fas fa-download"></i>
  Export
<% end %>

<% unless @assignment_templates.count == 0 %>
  <table id="assignment_templates" class="table table-responsive table-hover align-middle mt-3">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Edit</th>
        <th scope="col">Title</th>
        <th scope="col">Instruction</th>
        <th scope="col">Instruction URL</th>
        <th scope="col">Checkpoint</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @assignment_templates.each_with_index do |assignment_template, index| %>
        <tr>
          <td scope="row"><%= index + 1 %></td>
          <td>
            <% if assignment_template.assignment_templates_set.user == current_user %>
              <%= link_to edit_assignment_templates_set_assignment_template_path(assignment_template.assignment_templates_set, assignment_template), class: "edit-assignment_template btn btn-outline-success" do %>
                <i class="fas fa-edit"></i>
              <% end %>
            <% end %>
          </td>
          <td><%= assignment_template.title %></td>
          <td><%= assignment_template.instruction %></td>
          <td><%= assignment_template.instruction_url %></td>
          <td><%= assignment_template.checkpoint %></td>
          <td>
            <% if current_user.role == "tutor" %>
              <% if assignment_template.assignment_templates_set.user == current_user %>
                <%= link_to assignment_templates_set_assignment_template_path(assignment_template.assignment_templates_set, assignment_template), method: :delete, class: "delete-assignment_template btn btn-outline-secondary ms-1", data: { confirm: 'Do you really want to delete the assignment template?' } do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              <% end %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <span class="ms-5 text-secondary">No data</span>
<% end %>
