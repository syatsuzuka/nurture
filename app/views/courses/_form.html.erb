  <%= simple_form_for @course do |f| %>
    <%= f.input :name, required: true %>
    <%= f.input :description, required: true %>
    <%= f.association :student,
      collection: User.where(role: "student", visible: true).order(:first_name, :last_name),
      required: true,
      label: "Student (Nickname)",
      label_method: :select_label_nickname
    %>
    <%= f.input :photo, as: :file %>
    <%= f.submit 'Save', class: "btn btn-success text-light" %>
    <%= link_to 'Cancel', courses_path, class: 'btn btn-secondary text-light'%>
  <% end %>
