<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Home", dashboard_path, class: "text-secondary" %></li>
    <% if current_user.role == "tutor" %>
      <li class="breadcrumb-item" aria-current="page"><%= link_to "Students", students_path, class: "text-secondary" %></li>
      <li class="breadcrumb-item active" aria-current="page">Student Detail</li>
    <% else %>
      <li class="breadcrumb-item" aria-current="page"><%= link_to "Tutors", tutors_path, class: "text-secondary" %></li>
      <li class="breadcrumb-item active" aria-current="page">Tutor Detail</li>
    <% end %>
  </ol>
</nav>

<h3>
  <%= add_image(@user, 'avatar.png', class: 'avatar-large', width:100, height:100) %>
  <%= @user.first_name %> <%= @user.last_name %>
</h3>

<div class="mt-5 ms-5">
  <p>
    <% if @user.deactivated == true %>
      <span>
        <i class="fas fa-user-alt-slash me-2"></i>deactivated user
        <% unless @user.visible %>
          <i class="far fa-eye-slash"></i>
        <% end %>
      </span>
    <% else %>
      <span>
        <i class="fas fa-user me-2"></i> active user
        <% unless @user.visible %>
          <i class="far fa-eye-slash"></i>
        <% end %>
      </span>
    <% end %>
  </p>
  <p>
    <i class="fas fa-envelope me-2"></i><%= @user.email %>
  </p>
  <p>
    <i class="fas fa-users me-3"></i><%= @user.role %>
  </p>

  <div class="mt-5 ms-3">
    <h3>Message</h3>
    <% unless @user.message.nil? %>
      <div class="border mt-3 ms-3 mb-3 p-3">
        <pre>
<%= @user.message %>
        </pre>
      </div>
    <% else %>
      <div class="mt-3 ms-3 mb-3 p-3 text-secondary">
        (No entry)
      </div>
    <% end %>

    <% if @user.role == "tutor" %>
      <h3>Specialty</h3>

      <% unless @user.specialty.nil? %>
        <div class="border mt-3 mb-3 ms-3 p-3">
          <%= @user.specialty %>
        </div>
      <% else %>
        <div class="mt-3 ms-3 mb-3 p-3 text-secondary">
          (No entry)
        </div>
      <% end %>

      <h3>
        Reviews <span class="fs-5 text-secondary">(ave: <%= @average_star %>)</span>
        <% if current_user.role == "student" %>
          <% unless @review_flag %>
            <%= link_to new_tutor_review_path(@user), class: "btn btn-success text-light" do %>
              <i class="fas fa-plus"></i>
              Review
            <% end %>
          <% else %>
            <%= link_to edit_tutor_review_path(@user, @review), class: "btn btn-outline-success" do %>
              <i class="fas fa-edit"></i>
            <% end %>
            <%= link_to tutor_review_path(@user, @review), method: :delete, class: "btn btn-outline-secondary ms-1", data: { confirm: 'Do you really want to delete the review?' } do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          <% end %>
        <% end %>
      </h3>

      <div class="mb-3 ms-3 p-3">
        <% @reviews.each do |review| %>
          <div>
            <div>
              <% review.stars.times do %>
                <i class="fas fa-star text-success"></i>
              <% end %>
            </div>
            <blockquote class="blockquote mb-0">
              <p><%= review.comment %></p>
              <p class="blockquote-footer">
                <% if review.anonymous == false %>
                  <%= review.student.nickname %>
                <% else %>
                  anonymous
                <% end %>
                (<%= review.created_at.strftime('%F') %>)
              </p>
            </blockquote>
          </div>
        <% end %>
      </div>

    <% else %>
      <h3>Interest</h3>

      <% unless @user.interest.nil? %>
        <div class="border mt-3 ms-3 p-3">
          <%= @user.interest %>
        </div>
      <% else %>
        <div class="mt-3 ms-3 mb-3 p-3 text-secondary">
          (No entry)
        </div>
      <% end %>
    <% end %>
  </div>
</div>
