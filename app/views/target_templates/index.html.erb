<nav aria-label="breadcrumb">
  <ol class="breadcrumb d-flex align-items-center">
    <li class="breadcrumb-item"><%= link_to "Home", dashboard_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item" aria-current="page"><%= link_to "Template", template_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item active" aria-current="page">Target Template</li>
  </ol>
</nav>

<h1 class="mb-3">
  <i class="fas fa-bullseye me-3"></i>
  Target Template - <%= @target_templates_set.name %>
</h1>

<% if @target_templates_set.user == current_user %>
  <%= link_to new_target_templates_set_target_template_path(@target_templates_set), id: "add-target-template", class: "btn btn-success text-light ms-3" do %>
    <i class="fas fa-plus"></i>
    Add
  <% end %>

  <%= link_to upload_target_templates_path(@target_templates_set), id: "upload-target-template", class: "btn btn-success text-light" do %>
    <i class="fas fa-upload"></i>
    Import
  <% end %>
<% end %>

<%= link_to export_target_templates_path(@target_templates_set, format: :csv), id: "download-target-template", class: "btn btn-success text-light" do %>
  <i class="fas fa-download"></i>
  Export
<% end %>

<% unless @target_templates.count == 0 %>
  <table id="target_templates" class="table table-responsive table-hover align-middle mt-3">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">Edit</th>
        <th scope="col">Name (Fullpath)</th>
        <th scope="col">Description</th>
        <th scope="col">Score</th>
        <th scope="col">Delete</th>
      </tr>
    </thead>

    <tbody>
      <% @target_templates.each_with_index do |target_template, index| %>
        <tr>
          <td scope="row"><%= index + 1 %></td>
          <td>
            <% if @target_templates_set.user == current_user %>
              <%= link_to edit_target_templates_set_target_template_path(target_template.target_templates_set, target_template), class: "edit-target_template btn btn-outline-success" do %>
                <i class="fas fa-edit"></i>
              <% end %>
            <% end %>
          </td>
          <td>
            <% element = target_template %>
            <% parentpath = "" %>
            <% until element.parent.nil? %>
              <% element = element.parent %>
              <% if element.parent.nil? %>
                <% parentpath = "#{element.name} #{parentpath}" %>
              <% else %>
                <% parentpath = "> #{element.name} #{parentpath}" %>
              <% end %>
            <% end %>
            <span class="text-secondary">
              <%= parentpath %>
              <% unless parentpath.blank? %>
                >
              <% end %>
            </span>
            <strong class="text-dark"><%= target_template.name %></strong>
          </td>
          <td><%= target_template.description %></td>
          <td><%= target_template.score %></td>
          <% if current_user.role == "tutor" %>
            <td>
              <% if @target_templates_set.user == current_user %>
                <%= link_to target_templates_set_target_template_path(target_template.target_templates_set, target_template), method: :delete, class: "delete-target_template btn btn-outline-secondary ms-1", data: { confirm: 'Do you really want to delete the target template?' } do %>
                  <i class="fas fa-trash-alt"></i>
                <% end %>
              <% end %>
            </td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <span class="ms-5 text-secondary">No data</span>
<% end %>
