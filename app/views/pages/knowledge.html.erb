<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to t('resources.home'), dashboard_path, class: "text-secondary" %></li>
    <li class="breadcrumb-item active" aria-current="page"><%= t('resources.knowledge') %></li>
  </ol>
</nav>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h2><i class="fas fa-book-open"></i><%= t('resources.knowledge') %><%= t('suffix.list') %></h2>
  <%= form_tag knowledge_path, class: "d-flex h-25 w-50", method: :get do %>
      <%= text_field_tag :q,
        params[:q],
        class: "form-control searchbar",
        placeholder: t('.text_search_placeholder')
      %>
      <%= submit_tag t('label.form.search'), class: "btn btn-success" %>
  <% end %>
</div>

<%= render "/posts/index" %>
