                <%= t('resources.course') %>
              </div>
            <% end %>
            </h5>
          </li>
          <li class="nav-item hide mb-4 dropdown">
            <h5 class="m-3">
            <%= link_to report_path, id: 'report-menu', class: "card-link text-white text-decoration-none" do %>
