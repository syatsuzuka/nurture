<div class="navbar navbar-expand-md navbar-light sticky-top navbar-lewagon bg-dark">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar navbar-light text-light text-decoration-none d-flex align-items-center" do %>
      <%= image_tag "Nuture2.png", style: "width:auto; height: 55px;"%>
      <div class="text-secondary fs-5">Private Beta</div>
    <% end %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">

      <nav class="my-2 my-md-0 mr-md-3">
        <%= link_to "Docs", docs_path, class: "fs-5 p-2 text-light me-2" %>
        <%= link_to "Company", company_path, class: "fs-5 p-2 text-light me-2" %>
      <% if user_signed_in? %>
        <%= add_image(current_user, 'avatar.png',class: "avatar dropdown-toggle ml-3", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false, width:40, height:40, crop: :fill) %>
        <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
          <%= link_to t('.text_setting'), edit_user_registration_path, id: "setting-menu", class: "dropdown-item" %>
          <%= link_to t('.text_logout'), destroy_user_session_path, method: :delete, id: "logout-menu", class: "dropdown-item" %>
        </div>
        <% end %>
      </nav>

      <% if user_signed_in? %>
        <ul class="navbar-nav me-auto">
          <li class="nav-item hide mb-4 dropdown">
            <h5 class="m-3">
              <%= link_to dashboard_path, class: "card-link text-white text-decoration-none" do %>
                <div <%= @active_dashboard %>>
                  <i class="fas fa-home text-white me-1"></i>
                  <%= t('resources.dashboard') %>
                </div>
              <% end %>
            </h5>
          </li>
          <li class="nav-item hide mb-4 dropdown">
            <h5 class="m-3">
            <%= link_to courses_path, class: "card-link text-white text-decoration-none" do %>
              <div <%= @active_courses %>>
                <i class="fas fa-university text-white me-1"></i>
                <%= t('resources.course') %>
              </div>
            <% end %>
            </h5>
          </li>
          <li class="nav-item hide mb-4 dropdown">
            <h5 class="m-3">
            <%= link_to report_path, class: "card-link text-white text-decoration-none" do %>
              <div <%= @active_report %>>
                <i class="fas fa-chart-line text-white me-1"></i>
                <%= t('resources.progress') %>
              </div>
            <% end %>
            </h5>
          </li>
          <li class="nav-item hide mb-4 dropdown">
            <h5 class="m-3">
            <%= link_to all_assignments_path, class: "card-link text-white text-decoration-none" do %>
              <div <%= @active_assignments %>>
                <i class="fas fa-tasks text-white me-1"></i>
                <%= t('resources.assignment') %>
              </div>
            <% end %>
            </h5>
          </li>
          <% if current_user.role == "tutor" %>
            <li class="nav-item hide mb-4 dropdown">
              <h5 class="m-3">
              <%= link_to template_path, class: "card-link text-white text-decoration-none" do %>
                <div <%= @active_template %>>
                  <i class="fas fa-sticky-note text-white me-1"></i>
                  <%= t('resources.template') %>
                </div>
              <% end %>
              </h5>
            </li>
          <% end %>
          <li class="nav-item hide mb-4 dropdown">
            <h5 class="m-3">
            <%= link_to knowledge_path, class: "card-link text-white text-decoration-none" do %>
              <div <%= @active_knowledge %>>
                <i class="fas fa-book-open text-white me-1"></i>
                <%= t('resources.knowledge') %>
              </div>
            <% end %>
            </h5>
          </li>
          <% if current_user.role == "student" %>
            <li class="nav-item hide mb-4 dropdown">
            <h5 class="m-3">
              <%= link_to tutors_path, class: "card-link text-white text-decoration-none" do %>
                <div <%= @active_users %>>
                  <i class="fas fa-chalkboard-teacher text-white me-1"></i>
                  <%= t('resources.tutor') %>
                </div>
              <% end %>
            </h5>
            </li>
          <% end %>
          <% if current_user.role == "tutor" %>
            <li class="nav-item hide mb-4 dropdown">
            <h5 class="m-3">
              <%= link_to students_path, class: "card-link text-white text-decoration-none" do %>
                <div <%= @active_users %>>
                  <i class="fas fa-user text-white me-1"></i>
                  <%= t('resources.student') %>
                </div>
              <% end %>
              </h5>
            </li>
          <% end %>
        </ul>
      <% else %>
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <button type="button" class="btn btn-success"><%= link_to t('pages.home.btn_start'), new_user_session_path, class: "nav-link text-light" %></button>
          </li>
        </ul>
      <% end %>

    </div>
  </div>
</div>
