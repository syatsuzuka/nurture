<%= simple_form_for @post do |f| %>
  <%= f.error_notification %>

  <%= f.input :title, label: t('label.post.title') %>
  <%= f.input :photo, as: :file, label: t('label.post.photo')  %>
  <%= f.input :content, as: :text, label: t('label.post.content') %>

  <div class="mt-4">
    <%= f.submit t('label.form.save'), class: "btn btn-success text-light" %>
    <%= link_to t('label.form.cancel'), knowledge_path, class: 'btn btn-secondary text-light'%>
  </div>
<% end %>
