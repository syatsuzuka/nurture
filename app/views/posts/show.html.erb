<h1>Posts#show</h1>
<p>Find me in app/views/posts/show.html.erb</p>

<%= @post.title %>
<%= @post.content %>

<%= link_to 'back', '/knowledge' %>
<%= link_to 'delete', post_path(@post), confirm?: 'Are you sure?', method: :delete %>
<%= link_to 'edit', edit_post_path(@post)%>

<%= simple_form_for([@post, @post.comments.create])   do |f| %>
  <%= f.input :content %>
  <%= f.button :submit %>
<% end %>

<h2>Comments...</h2>
<% @post.comments.each  do |c| %>
  <p><%= c.content %></p>
<% end %>
